<?php

/**
 * @file
 * Contains RestfulCreateEntityTestCase
 */

class RestfulCreateEntityTestCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'Create entity',
      'description' => 'Test the creation of an entity.',
      'group' => 'Restful',
    );
  }

  function setUp() {
    parent::setUp('restful_example');
  }

  /**
   * Test creating an entity (POST method).
   */
  function testCreateEntity() {
    $handler = restful_get_restful_handler('articles');
    $request = array('label' => $this->randomName());
    $result = $handler->post('', $request);

    $node = node_load($result['id']);
    $expected_result = array(
      'id' => $node->nid,
      'label' => $node->title,
      'self' => url('node/' . $node->nid, array('absolute' => TRUE)),
    );

    $this->assertEqual($result, $expected_result, 'Entity was created.');
  }

  /**
   * Test access control for creating an entity.
   */
  function testAccess() {
    $handler = restful_get_restful_handler('articles');
    $request = array('label' => $this->randomName());


    // Non-privileged user.
    $user1 = $this->drupalCreateUser();
    try {
      $handler->post('', $request, $user1);
      $this->fail('Non-privileged user can create entity.');
    }
    catch (Exception $e) {
      $this->pass('Non-privileged user cannot create entity.');
    }

    // Privileged user.
    $user2 = $this->drupalCreateUser(array('access content', 'create article content'));
    $result = $handler->post('', $request, $user2);
    $this->assertTrue($result, 'Privileged user can create entity.');
  }

}
